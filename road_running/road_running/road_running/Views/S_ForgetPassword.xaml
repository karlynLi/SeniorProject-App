            <Entry x:Name="captcha" ></Entry>
            <Button Text="送出" FontSize="Medium" Clicked="CheckNum" HorizontalOptions="Center" WidthRequest="200" CornerRadius="26" Margin="0,20"></Button>
            <Button Text="返回" FontSize="Medium" BackgroundColor="#769fcd" Clicked="GoBack" HorizontalOptions="Center" WidthRequest="200" CornerRadius="26"></Button>
