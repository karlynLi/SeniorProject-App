<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="road_running.Views.S_AccountSafety"
    Title="帳號安全">
    <ContentPage.Content>
        <StackLayout Margin="30">
            <Label Text="輸入舊密碼" TextColor="#769fcd" FontSize="20" FontAttributes="Bold"/>
            <Entry x:Name="Oldpass" IsPassword="True" Placeholder="在此輸入舊密碼" Margin="0,10"/>
            <Button Text="確認" Clicked="CheckPass" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" WidthRequest="300" HeightRequest="70" CornerRadius="10" FontSize="30" Margin="40"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
