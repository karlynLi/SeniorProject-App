<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="road_running.Views.S_ResetPassword"
             Title="修改密碼">
    <ContentPage.Content>
        <StackLayout Margin="30">
            <Label Text="輸入新密碼" TextColor="#769fcd" FontSize="20" FontAttributes="Bold"/>
            <Entry x:Name="pass1" IsPassword="True" Placeholder="在此輸入新密碼" Margin="0,10" MaxLength="10" CharacterSpacing="10" ClearButtonVisibility="WhileEditing" />
            <Label Text="確認新密碼" TextColor="#769fcd" FontSize="20" FontAttributes="Bold"/>
            <Entry x:Name="pass2" IsPassword="True" Placeholder="確認新密碼" Margin="0,10" MaxLength="10" CharacterSpacing="10" ClearButtonVisibility="WhileEditing" />
            <Button Text="更改密碼" Clicked="UpdatePass" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" WidthRequest="300" HeightRequest="70" CornerRadius="10" FontSize="30" Margin="40"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>